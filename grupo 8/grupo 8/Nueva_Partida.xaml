      <LineBreak/>
      <Run Text="enemigo."/>
    </TextBlock>
    <TextBlock HorizontalAlignment="Left" Height="34" Margin="873,622,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" TextAlignment="Center">
