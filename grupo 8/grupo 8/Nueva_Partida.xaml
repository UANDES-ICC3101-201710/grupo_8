      <Run Text="."/>
    </TextBlock>
    <TextBlock HorizontalAlignment="Left" Height="34" Margin="462,631,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" TextAlignment="Center">
      <Run Text="Te auto-infliges 2 de daño"/>
      <LineBreak/>
      <Run Text="y robas una carta."/>
    </TextBlock>
    <TextBlock HorizontalAlignment="Left" Height="34" Margin="445,394,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" TextAlignment="Center">
